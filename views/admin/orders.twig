{% extends "layouts/admin.twig" %}

{% block title %}Orders{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
    </style>
{% endblock %}
{% block content %}
    <h1>ORDERS</h1>
    {% include "parts/alert.twig" %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th> ID </th>
            <th> Product </th>
            <th> User </th>
            <th> Created at </th>
            <th>Charged Amount</th>
            <th>Status</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.product_name }}</td>
                <td>{{ order.user_name }}</td>
                <td>{{ order.created_at }}</td>
                <td>${{ order.charged }}</td>
                <td>{{ order.status }}</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton{{ order.id }}" data-bs-toggle="dropdown" aria-expanded="false">
                            Status
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton{{ order.id }}">
                            {% for status in statuses %}
                                {% if status != order.status %}
                                    <li><a class="dropdown-item" href="/admin/orders/{{ order.id }}/{{ status }}">Make {{ status }}</a></li>
                                {% endif %}
                            {% endfor %}

                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </w-full>
{% endblock %}